        AREA Example, CODE, READONLY     ; Define a code section
        ENTRY                            ; Entry point

start   MOV R0, #10                      ; R0 = 10
        MOV R1, #3                       ; R1 = 3
        ADD R0, R0, R1                   ; R0 = R0 + R1 = 13

stop    B stop                           ; Infinite loop
        END
