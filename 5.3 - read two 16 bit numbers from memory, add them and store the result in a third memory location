        AREA Program, CODE, READONLY
        ENTRY

        ; Load first 16-bit number from NUM1 into R0
        LDR     R0, NUM1
		; Load second 16-bit number from NUM2 into R1
        LDR     R1, NUM2
		; Add R0 and R1, store in R2
        ADD     R2, R0, R1
		; Reverse subtract: R3 = R1 - R0
        RSB     R3, R0, R1

        ; Store the sum (R2) into RESULT1
        LDR     R4, =RESULT1
        STR     R2, [R4]

        ; Store the reverse subtract result (R3) into RESULT2
        LDR     R4, =RESULT2
        STR     R3, [R4]

        ; Software interrupt to end the program (platform-specific)
        SWI     &11

NUM1    DCW     &01111          ; 16-bit number 0x1111
        ALIGN

NUM2    DCW     &4567          ; 16-bit number 0x4567
        ALIGN
			
		; Data section for input values
        AREA    DataRAM, DATA, READWRITE

RESULT1 DCD     0               ; 32-bit space for result 1 (sum)
RESULT2 DCD     0               ; 32-bit space for result 2 (reverse subtract)

        END
