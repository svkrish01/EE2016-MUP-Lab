; Developer		- Sriram Venkata Krishna
; Date			- 22-09-2025
; Software		- Keil Micro-Vision 5
; Controller	- ARM LPC2148

; Experiment	- 5
; Example		- 4

; Ex 5.4 - Sum of Natural Numbers

		AREA Example_4, CODE, READONLY		; Code Section 
		ENTRY								; Entry Point
		
start	LDR 	R0, NUM1					; R0 = NUM1
		MOV		R1, #0						; R1 = 0 
		MOV 	R2, #0						; R2 = 0
		
		LDR		R4, =RESULT1				; R4 = Address of RESULT1	

loop	ADD		R1, R1, #1					; R1 = R1 + 1
		ADD		R2, R2, R1					; R2 = R2 + R1
		CMP		R0, R1						; Compare R0 & R1
		BNE		loop						; Loop 
		
		STR 	R2, [R4]					; RESULT1 = R2
		
stop	B 		stop						; Infinite Loop
		
NUM1	DCW 	&05							; NUM1 = 0x5
		ALIGN
			
			
		AREA DataRAM, DATA, READWRITE
			
RESULT1	DCD		0							; 32-Bit Space for RESULT1 (Sum)

		END									; End of File
		
