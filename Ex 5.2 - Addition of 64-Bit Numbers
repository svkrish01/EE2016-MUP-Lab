; Developer		- Sriram Venkata Krishna
; Date			- 22-09-2025
; Software		- Keil Micro-Vision 5
; Controller	- ARM LPC2148

; Experiment	- 5
; Example		- 2

; Ex 5.2 - Addition of 64-Bit Numbers

		AREA Example_2, CODE, READONLY		; Code Section 
		ENTRY								; Entry Point
		
start	MOV 	R0, #12						; R0 = 12
		MOV 	R1, #10						; R1 = 10
		MOV 	R2, #5 						; R2 = 5
		MOV 	R3, #8						; R3 = 8
		
		ADDS	R5, R1, R3					; R5 = R1 + R3 (Set Carry)
		ADC		R4, R0, R2					; R6 = R0 + R2 (With Carry)
		
stop 	B		stop						; Infinite Loop

		END									; End of File
